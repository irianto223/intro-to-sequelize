<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>teacher page</title>
  </head>
  <body>
    <a href="/teachers/add">Add teacher</a><br><br>
    <table border="1px" width="100%">
      <tr>
        <th>id</th>
        <th>first name</th>
        <th>last name</th>
        <th>email</th>
        <th>subject</th>
        <th>options</th>
      </tr>
      <% dataTeacher.forEach(d => { %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.first_name %></td>
        <td><%= d.last_name %></td>
        <td><%= d.email %></td>
        <% if (d.SubjectId == undefined) { %>
          <td>unassigned</td>
        <% } else { %>
          <td><%= d.Subject.subject_name %></td>
        <% } %>
        <td><a href="/teachers/edit/<%= d.id %>">Edit</a> | <a href="/teachers/delete/<%= d.id %>">Delete</a></td>
      </tr>
      <% }) %>
    </table>
    <br><a href="/">back</a>
  </body>
</html>
